  <body>

  <section class="formulario mb-5">
    <div class="wrapper">
      <h1>Tarea</h1>
      <hr class="new">
      <form method="POST" action="/users">
          <label for="nombres">Nombres</label><br>
          <input type="text" name="nombres" value=""><br>
          <label for="apellidos">Apellidos</label><br>
          <input type="text" name="apellidos" value=""><br>
          <label for="email">Correo Electrónico</label><br>
          <input type="email" name="email" value=""><br>
          <label for="username">Usuario:</label><br>
          <input type="text" name="username" value=""><br>
          <label for="password">Contraseña:</label><br>
          <input type="text" name="password" value=""><br><br>
          <input class="button" type="submit" value="Inscribirse">
      </form>
  </div>
  </section>

  <section class="tablaresult mt-5">
    <div class="wrappper">
      <h1>Lista de Usuarios</h1>
      <ul>
        <% users.forEach(function(user){ %>
            <li>Nombre: <%= user.nombres %></li>
            <li>Apellidos: <%= user.apellidos %></li>
            <br>
        <% }); %>
      </ul>
    </div>
  </section>

